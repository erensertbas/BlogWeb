@model BlogWeb.DL.Models.AboutUs
@{
    ViewData["Title"] = "AboutUsDelete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" asp-action="AboutUsDeletePOST">
       <input asp-for="Id" hidden/>

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3>Hakkımızda sil</h3> <hr />
        </div>
        <div class="mb-3">
            <input asp-for="Text" placeholder="Hakkımızda girin" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Sil</button>
        <a asp-controller="Admin" asp-action="AboutUs" class="btn btn-secondary" style="width:150px">Geri Dön</a>
    </div>
</form>

