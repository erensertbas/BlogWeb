@model BlogWeb.DL.Models.AboutUs
@{
    ViewData["Title"] = "AboutUsEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3>Hakkımızda Düzenle</h3> <hr />
        </div>
       <input asp-for="Id" hidden/>

        <div class="mb-3">
            <input asp-for="Text" placeholder="Metin Giriniz..." class="form-control" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Düzenle</button>
        <a asp-controller="Admin" asp-action="AboutUs" class="btn btn-secondary" style="width:150px">Geri Dön</a>
    </div>
</form>


