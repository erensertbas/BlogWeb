@model BlogWeb.DL.Models.Contact
@{
    ViewData["Title"] = "ContactEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-action="ContactEdit">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h4>İletişim Düzenle</h4> 
        </div>
        <div class="col-md-6">
            <input asp-for="Id" hidden/>

        <div class="mb-3">
            <input asp-for="Address"class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
          <div class="mb-3">
            <input asp-for="EmailAddress"class="form-control" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
          <div class="mb-3">
            <input asp-for="Phone"class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning" style="width:150px">Düzenle</button>
        <a asp-controller="Admin" asp-action="Contact" class="btn btn-secondary" style="width:150px">Geri Dön</a>
        </div>
       
    </div>
</form>


