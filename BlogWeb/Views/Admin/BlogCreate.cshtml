@model BlogWeb.DL.Models.Blog

@{
    ViewData["Title"] = "Makale Yayınla";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BlogCreate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="BlogId" hidden />
            <input asp-for="ImageUrl" hidden />


            <div class="form-group">

                <input asp-for="BlogTitle" class="form-control" placeholder="Makale Başlık" />
                <span asp-validation-for="BlogTitle" class="text-danger"></span><br />
            </div>
            <div class="form-group">

                <input asp-for="Text" class="form-control" placeholder="İçerik" />
                <span asp-validation-for="Text" class="text-danger"></span> <br />
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl"></label>
                <input type="file" accept="image/*" id="uploadBox" name="file" />
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" />
                    @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>

            <div class="mb-3">
                <select asp-for="CategoryId" asp-items="@ViewBag.v" class="form-select">
                    <option disabled selected>Kategori Seçiniz</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div> <br />

            <div class="form-group">

                <input asp-for="Date" class="form-control" placeholder="Tarih" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            @* <div class="form-group">
            <label asp-for="UserId" class="control-label"></label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

