@model BlogWeb.DL.Models.Blog

@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="card mb-3" style="max-width:850px; ">
    <img src="~/images/@Model.ImageUrl" style="max-height:300px" />

    <div class="card-body">
            <p class="card-text">@Html.Raw(System.Web.HttpUtility.HtmlDecode(@Model.Text))</p>
    </div>

    <div class="card-footer text-muted">
        @Model.Date.ToShortDateString()
    </div>


</div>