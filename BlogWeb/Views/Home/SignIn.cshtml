@model BlogWeb.DL.Models.UserModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css"
      rel="stylesheet" />


@if (TempData["Error"] != null)
{
    <p> @TempData["Error"]</p>
}
<div class="row m-5">
    <div class="col-md-4"></div>
    <div class="col-md-4">


        <!-- Pills content -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                <form asp-action="SignIn">
                    <div class="text-center mb-3">
                        <p>Giriş yap</p>

                    </div>
                    <br />
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Email" type="email" class="form-control" />
                        <label class="form-label" >Mail Adresi</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Password" type="password" id="loginPassword" class="form-control" />
                        <label class="form-label">Şifre</label>
                    </div>

                    <!-- 2 column grid layout -->
                    <div class="row mb-4">
                        <div class="col-md-8 d-flex ">
                            <!-- Simple link -->
                            <p>Henüz üye olmadın mı?</p>&nbsp; <a href="~/User/Registration"> Hemen kayıt ol</a>
                        </div>
                        <div class="col-md-4 d-flex ">
                            <!-- Simple link -->
                            <a href="#!">Şifremi unuttum</a>
                        </div>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4">Giriş yap</button>
                </form>
            </div>

        </div>
        <!-- Pills content -->

    </div>
    <div class="col-md-4"></div>
</div>
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.js"></script>