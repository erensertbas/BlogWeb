@model BlogWeb.DL.Models.UserModel
@{
    ViewData["Title"] = "ForgotMyPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css"
      rel="stylesheet" />

<div class="row m-5">
    <div class="col-md-4">
        <!-- Pills content -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                <form asp-action="ForgotMyPassword" method="post">
                    <div class="text-center mb-3">
                        <p>Şifremi Unuttum</p>
                    </div>
                    <br />                 
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Email" type="email" class="form-control" />
                        <label class="form-label">Mail Adresi</label>
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                   <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4">Gönder <i class="fa fa-paper-plane-o"></i></button>
                    <div class="form-outline mb-4">
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert-info">@TempData["Message"]</div>
                        }
                    </div>
                </form>

            </div>

        </div>
        <!-- Pills content -->

    </div>

</div>

