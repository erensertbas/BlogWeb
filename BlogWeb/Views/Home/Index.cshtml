@model List<BlogWeb.DL.Models.Category>
@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .hero-banner {
        background-image: url(~/sensive/img/blog/blog-slider/blog-slide1.png);
    }
</style>
<main class="site-main">

